<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".ui.questionnaire.questions.QuestionTwo">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="ðŸŽ‰ Age of participant ?"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question">

        <CheckBox
            style="@style/QuestionnaireCheckbox"
            android:layout_marginTop="16dp"
            android:background="@drawable/questionnaire_background_selector"
            android:buttonTint="@color/questionnaire_text_selector"
            android:text="Children (0-13)"
            android:textColor="@color/questionnaire_text_selector" />

        <CheckBox
            style="@style/QuestionnaireCheckbox"
            android:layout_marginTop="16dp"
            android:background="@drawable/questionnaire_background_selector"
            android:buttonTint="@color/questionnaire_text_selector"
            android:text="Adolscent (14-20)"
            android:textColor="@color/questionnaire_text_selector" />

        <CheckBox
            style="@style/QuestionnaireCheckbox"
            android:layout_marginTop="16dp"
            android:background="@drawable/questionnaire_background_selector"
            android:buttonTint="@color/questionnaire_text_selector"
            android:text="Adult (21-45)"
            android:textColor="@color/questionnaire_text_selector" />

        <CheckBox
            style="@style/QuestionnaireCheckbox"
            android:background="@drawable/questionnaire_background_selector"
            android:buttonTint="@color/questionnaire_text_selector"
            android:text="Middle Age (46-64)"
            android:textColor="@color/questionnaire_text_selector" />

        <CheckBox
            style="@style/QuestionnaireCheckbox"
            android:background="@drawable/questionnaire_background_selector"
            android:buttonTint="@color/questionnaire_text_selector"
            android:text="Senior Adult (> 64)"
            android:textColor="@color/questionnaire_text_selector" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>