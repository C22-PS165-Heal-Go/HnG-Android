<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_header_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_description_white"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/title_detail"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:background="@drawable/bottom_sheet_content_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/not_interested_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="40dp">

            <ImageView
                android:id="@+id/not_interested_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_not_interested_medium"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/not_interested"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/not_interested" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/interested_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="40dp">

            <ImageView
                android:id="@+id/interested_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_interested_medium"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/interested"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/interested" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_content_background"
        app:layout_constraintTop_toBottomOf="@id/layout_actions"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:drawableStartCompat="@drawable/ic_description"
            android:drawablePadding="12dp"
            android:text="@string/description_detail"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLocationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:drawableStartCompat="@drawable/ic_location"
            android:drawablePadding="12dp"
            android:text="@string/location_temp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>